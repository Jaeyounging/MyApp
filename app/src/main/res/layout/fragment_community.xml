<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.CommunityFragment">

        <ListView
            android:id="@+id/communityList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp" />

        <Button
            android:id="@+id/writeBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/border3"
            android:drawableStart="@drawable/pen"
            android:paddingStart="10dp"
            android:text="글 쓰기"
            android:textSize="15sp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="70dp" />

<!--        <ImageView-->
<!--            android:id="@+id/writeBtn"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:src="@drawable/write_button"-->
<!--            android:layout_gravity="bottom|center"-->
<!--            android:layout_marginBottom="80dp" />-->

        <!-- TODO: Update blank fragment layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom">



            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/mainColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/homeTap"
                    android:layout_width="216px"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_home" />

                <ImageView
                    android:id="@+id/communityTap"
                    android:layout_width="216px"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_community" />

                <ImageView
                    android:id="@+id/searchTap"
                    android:layout_width="216px"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_search" />

                <ImageView
                    android:id="@+id/inquiryTap"
                    android:layout_width="216px"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_chat" />

                <ImageView
                    android:id="@+id/mypageTap"
                    android:layout_width="216px"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_mypage" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="216px"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="홈"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="216px"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="커뮤니티"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="216px"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="검색"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="216px"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="문의"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="216px"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="마이페이지"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>