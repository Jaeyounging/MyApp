<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.SearchFragment">

        <!-- TODO: Update blank fragment layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:background="@color/mainColor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/homeTap"
                    android:layout_width="216px"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_home" />

                <ImageView
                    android:id="@+id/communityTap"
                    android:layout_width="216px"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_community" />

                <ImageView
                    android:id="@+id/searchTap"
                    android:layout_width="216px"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_search" />

                <ImageView
                    android:id="@+id/inquiryTap"
                    android:layout_width="216px"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_chat" />

                <ImageView
                    android:id="@+id/mypageTap"
                    android:layout_width="216px"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_mypage" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="216px"
                    android:layout_height="20dp"
                    android:text="홈"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="216px"
                    android:layout_height="20dp"
                    android:text="커뮤니티"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="216px"
                    android:layout_height="20dp"
                    android:text="검색"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="216px"
                    android:layout_height="20dp"
                    android:text="문의"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="216px"
                    android:layout_height="20dp"
                    android:text="마이페이지"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>